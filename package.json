{
  "name": "agentic-browser",
  "version": "1.0.0",
  "description": "Local-first agentic browser with Playwright and web UI",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:orchestrator\" \"npm run dev:ui\"",
    "dev:orchestrator": "tsx watch apps/orchestrator/src/index.ts",
    "dev:ui": "vite --config apps/ui/vite.config.ts",
    "build": "npm run build:orchestrator && npm run build:ui",
    "build:orchestrator": "tsc -p apps/orchestrator/tsconfig.json",
    "build:ui": "vite build --config apps/ui/vite.config.ts",
    "playwright:install": "playwright install chromium"
  },
  "keywords": ["playwright", "agentic", "browser", "automation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "playwright": "^1.48.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.7.0",
    "@types/ws": "^8.5.12",
    "concurrently": "^9.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  }
}

